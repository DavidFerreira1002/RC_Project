<?xml version="1.0"?>
<launch>
  <arg name="ns" default="" />
  <arg name="max_linear_speed" default="1.0" />
  <arg name="max_angular_speed" default="2.0" />
  <arg name="safe_dist_th" default="1.0" />
  <arg name="detour_obst_th" default="0.75" />
  <arg name="stop_dist_th" default="0.5" />
  <arg name="diff_th" default="0.1" />
  
  <node pkg="random_walk" type="random_walk" name="random_walk" output="screen">
		<param name="max_linear_speed" value="$(arg max_linear_speed)" />
		<param name="max_angular_speed" value="$(arg max_angular_speed)" />
		<param name="safe_dist_th" value="$(arg safe_dist_th)" />
		<param name="detour_obst_th" value="$(arg detour_obst_th)" />
		<param name="stop_dist_th" value="$(arg stop_dist_th)" />
		<param name="diff_th" value="$(arg diff_th)" />
		<param name="verbose" value="0" />
		<param name="useLRF" value="1" />
  </node>
  
 <node pkg="fake_localization" type="fake_localization" name="fake_localization" output="screen">
	<param name="delta_x" value="0.0" />
	<param name="delta_y" value="0.0" />
	<param name="delta_yaw" value="0.0" />
	<param name="global_frame_id" value="/map"/>
	<param name="odom_frame_id" value="$(arg ns)odom" />
	<param name="base_frame_id" value="$(arg ns)base_footprint" />
	<remap from="/$(arg ns)base_pose_ground_truth" to="/$(arg ns)odom" />
  </node>
</launch>
