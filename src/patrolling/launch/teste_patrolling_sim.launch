<?xml version="1.0" encoding="UTF-8" ?>
<launch>
  <arg name="MAP" default="grid" />
  <arg name="INITPOS" default="default"/>
  <arg name="NROBOTS" default="1" />
  <arg name="ALG" default="Heuristic_Conscientious_Reactive" />
  <arg name="LOC_MODE" default="AMCL" />
  <arg name="NAV_MODULE" default="ros" />
  <arg name="GWAIT" default="0" />
  <arg name="COMMDELAY" default="0.0" />
  <arg name="TIMEOUT" default="0" />
  <arg name="CUSTOM_STAGE" default="false" />
  <arg name="SPEEDUP" default="1.0" />

  <param name="use_sim_time" value="true" />
  <param name="goal_reached_wait" value="0" />
  <param name="communication_delay" value="0.0" />
  <param name="navigation_module" value="ros" />
  <param name="initial_positions" value="default" />

  <param name="initial_pos" value="[1.425, 24.375]" />

  <remap from="/odom" to="robot_0/odom"/>
  <remap from="/cmd_vel" to="/robot_0/cmd_vel"/>

  <remap from="base_frame" to="base_link"/>
  <remap from="scan" to="base_scan"/>
  <remap from="laser_frame" to="base_laser_link"/>


  <node pkg="patrolling_sim" type="init_pos_calc" name="init_pos_calc" args="CurrentWorld"/>

  <node pkg="patrolling_sim" type="monitor" name="monitor" args="CurrentWorld HCR 1"/>

  <include file="$(find patrolling_sim)/launch/map.launch">
    <!-- <arg name="map" value="grid"/> -->
  </include>

  <include file="$(find patrolling_sim)/launch/robot.launch">
    <arg name="robotname" value="robot_0"/>
    <arg name="mapname" value="CurrentWorld"/>
    <arg name="use_amcl" value="true"/>
    <arg name="use_move_base" value="true"/>
  </include>

  <node pkg="patrolling_sim" type="Heuristic_Conscientious_Reactive" name="Heuristic_Conscientious_Reactive" args="patrol_robot0 CurrentWorld 0"/>

</launch>

