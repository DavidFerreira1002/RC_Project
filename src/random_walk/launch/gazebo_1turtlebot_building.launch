<?xml version="1.0"?>
<launch>
  <master auto="start"/>
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>

<!--  <param name="/use_sim_time" value="true" />-->

  <include file="$(find rc_simul_worlds)/launch/turtlebot3_gazebo_building.launch">
<!--    <arg name="x_pos" value="-2.0"/>
    <arg name="y_pos" value="1.0"/>
    <arg name="yaw_angle" value="1.57079633"/> -->
    <remap from="base_scan" to="scan"/>
  </include>

  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
    <param name="publish_frequency" type="double" value="50.0" />
    <param name="tf_prefix" value=""/>
  </node>

  <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher">
    <param name="use_gui" value="true"/>
    <param name="rate" value="50"/>
  </node>

  <node name="map_server" pkg="map_server" type="map_server"
	  args="$(find rc_simul_worlds)/maps/building/building.png 0.025" respawn="false"/>
	  
  <node pkg="rviz" type="rviz" name="rviz"
  	args="-d $(find random_walk)/rviz_configs/gazebo_1turtlebot_building.rviz"
  />

  <include file="$(find random_walk)/launch/random_walk.launch" >
    <arg name="max_linear_speed" value="0.5" />
    <arg name="max_angular_speed" value="2.0" />
    <arg name="safe_dist_th" value="1.0" />
    <arg name="detour_obst_th" value="0.75" />
    <arg name="stop_dist_th" value="0.5" />
    <arg name="diff_th" value="0.1" />
  </include>

</launch>
