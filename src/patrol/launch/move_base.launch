<?xml version="1.0"?>
<launch>
  <!-- Arguments -->
  <arg name="model" default="waffle" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="odom" />
  <arg name="move_forward_only" default="false"/>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <rosparam file="$(find patrol)/param/costmap_common_params_$(arg model).yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find patrol)/param/costmap_common_params_$(arg model).yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find patrol)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find patrol)/param/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find patrol)/param/move_base_params.yaml" command="load" />
    <rosparam file="$(find patrol)/param/dwa_local_planner_params_$(arg model).yaml" command="load" />
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <!-- <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" /> -->
    <param name="DWAPlannerROS/max_vel_x" value="0.10" />
    <param name="DWAPlannerROS/min_vel_x" value="-0.10" />
    <param name="DWAPlannerROS/max_vel_trans" value="0.10" />
    <param name="DWAPlannerROS/min_vel_trans" value="0.06" />
    <param name="DWAPlannerROS/max_vel_theta" value="0.75" />
    <param name="DWAPlannerROS/min_vel_theta" value="0.3" />
  </node>

  <include file="$(find explore_lite)/launch/explore.launch"/>

</launch>
